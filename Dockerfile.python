FROM python:3.10-slim

RUN apt-get update && apt-get install -y \
    ffmpeg \
    libreoffice \
    fonts-nanum \
    fonts-noto-cjk \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && fc-cache -fv

WORKDIR /python

COPY python/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY ./python /python

CMD ["gunicorn", "-w", "1", "-k", "uvicorn.workers.UvicornWorker", "main:app", "--timeout", "3600", "--bind", "0.0.0.0:5000"]
